classDiagram
    class MenuItem {
        - name: str
        - price: float
        <<abstract>>
        + MenuItem(name: str, price: float)
    }
    
    class Beverage {
        - temperature: float
        - is_sugared: bool
        + Beverage(name: str, price: float, temperature: float=0, is_sugared: bool=False)
    }
    
    class Appetizer {
        - calories: float
        + Appetizer(name: str, price: float, calories: float=0)
    }
    
    class MainCourse {
        - is_vegetarian: bool
        - prep_time: float
        + MainCourse(name: str, price: float, is_vegetarian: bool=False, prep_time: float=0)
    }
    
    class Menu {
        - items: List[MenuItem]
        + Menu()
        + get_item(name: str): MenuItem
    }
    
    class Order {
        - menu: Menu
        - menu_items: List[MenuItem]
        + Order(menu: Menu)
        + add_item(name: str): void
        + apply_discount(): float
        + calculate_total_price(): float
    }

    MenuItem <|-- Beverage
    MenuItem <|-- Appetizer
    MenuItem <|-- MainCourse
    Menu "1" *-- "1..*" MenuItem : contains
    Order "1" o-- "1" Menu : uses
    Order "1" *-- "0..*" MenuItem : aggregates
